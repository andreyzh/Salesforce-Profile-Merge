<Window x:Class="Wyndnet.SFDC.ProfileMerge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wyndnet.SFDC.ProfileMerge"
        mc:Ignorable="d"
        Title="SFDC Profile Merge Tool" Height="1600" Width="900">
    <Grid>
        <Button Content="Load XML 1" Margin="807,20,10,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Load XML 2" Margin="807,45,10,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="Analyze" Margin="807,70,10,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="449" Margin="10,10,0,0" VerticalAlignment="Top" Width="200px">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Change type" Binding="{Binding ChangeType}"></DataGridTextColumn>
                <DataGridTextColumn Header="Element type" Binding="{Binding ElementType}"></DataGridTextColumn>
                <DataGridTextColumn Header="Element name" Binding="{Binding Name}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
